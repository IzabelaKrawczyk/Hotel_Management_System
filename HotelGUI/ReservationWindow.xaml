<Window x:Class="HotelGUI.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelGUI"
        mc:Ignorable="d"
        Title="ReservationWindow" Height="274.27" Width="483.029">
    <Grid Margin="0,0,2,3">
        <Label Content="Client Data" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Reservation" HorizontalAlignment="Left" Margin="0,86,-17,0" VerticalAlignment="Top" Width="490" Background="#FFD0ECE5"/>
        <TextBox x:Name="textbox_client" HorizontalAlignment="Left" Height="57" Margin="88,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375"/>
        <TextBlock x:Name="textblock_Reservation" HorizontalAlignment="Left" Height="113" Margin="88,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="375"/>
        <Button x:Name="button_save" Content="Save" HorizontalAlignment="Left" Height="27" Margin="0,171,0,0" VerticalAlignment="Top" Width="68" Click="Button_Save"/>
        <Button x:Name="button_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="0,203,0,0" VerticalAlignment="Top" Width="68" Height="27" IsCancel="True" Click="Button_Cancel_Click"/>

    </Grid>
</Window>
